[Unit]
Description=Westronics Boiler
ConditionPathExists=/home/root/westronics/boiler.js

[Service]
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=boiler
EnvironmentFile=/etc/default/node
WorkingDirectory=/home/root/westronics
ExecStart=/usr/bin/node boiler.js

[Install]
WantedBy=multi-user.target
